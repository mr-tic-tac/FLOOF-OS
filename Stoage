Filesystem Implementation

Add a simple storage-backed filesystem to FloofOS:

#include <stdio.h>
#include <string.h>

struct File {
    char name[16];
    char data[256];
    size_t size;
};

struct File files[10]; // Support up to 10 files
size_t file_count = 0;

int create_file(const char* name, const char* data, size_t size) {
    if (file_count >= 10) return -1; // No space left
    struct File* file = &files[file_count++];
    strncpy(file->name, name, sizeof(file->name));
    strncpy(file->data, data, sizeof(file->data));
    file->size = size;
    
    FILE* fp = fopen(name, "wb");
    if (!fp) return -1;
    fwrite(data, 1, size, fp);
    fclose(fp);
    
    return 0;
}

struct File* find_file(const char* name) {
    for (size_t i = 0; i < file_count; i++) {
        if (strncmp(files[i].name, name, sizeof(files[i].name)) == 0) {
            return &files[i];
        }
    }
    return NULL;
}

int delete_file(const char* name) {
    for (size_t i = 0; i < file_count; i++) {
        if (strncmp(files[i].name, name, sizeof(files[i].name)) == 0) {
            for (size_t j = i; j < file_count - 1; j++) {
                files[j] = files[j + 1];
            }
            file_count--;
            remove(name);
            return 0;
        }
    }
    return -1; // File not found

